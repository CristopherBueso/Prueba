                <label class="control-label">Pais de Naturalizacion</label>
                <select style="height:auto;" asp-for="IdPaisNaturalizacion" class="form-control" asp-items="ViewBag.IdPaisNaturalizacion"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
